{
    "priority": 5,
    "request": {
        "method": "POST",
        "urlPath": "/cft/api/v1/transfers/messages",
        "queryParameters": {
            "part": {
                "matches": ".*"
            },
            "idm": {
                "matches": ".*"
            },
            "apitimeout": {
                "or": [
                    {
                        "matches": "[0-9]+"
                    },
                    {
                        "absent": true
                    }
                ]
            }
        },
        "headers": {
            "Accept": {
                "equalTo": "application/json"
            }
        },
        "basicAuth": {
            "username": "admin",
            "password": "Passw0rd"
        }
    },
    "response": {
        "status": 400,
        "jsonBody": {
            "code": 99,
            "message": "JSON body must contain parameter 'msg'."
        },
        "headers": {
            "Content-Type": "application/json"
        }
    }
}